<Window x:Class="WpfApp2.Employee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Employee" Height="450" Width="800">
    <Grid Background="#FFC77734">
        <StackPanel Margin="30">
            <StackPanel>
                <TextBlock Text="pinding / in progress" Foreground="White" FontWeight="Bold" Margin="5"/>
                <DataGrid x:Name="pindingCompleatedDatagrid" IsReadOnly="True" Height="130" Margin="5" SelectionChanged="pindingCompleatedDatagrid_SelectionChanged" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Margin="10" Content="Id : " Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtID" Width="100" Margin="0,10,0,10" IsReadOnly="True" Background="#FF584E3E" Foreground="#FFF0F0F0" FontWeight="Bold"/>

                <ComboBox x:Name="comboooo" Margin="30,10,0,10" Width="153">
                    <ComboBoxItem Content="Pending"/>
                    <ComboBoxItem Content="Progress"/>
                    <ComboBoxItem Content="Completed" IsSelected="True"/>
                </ComboBox>
                <Button Margin="30,10,0,10" Width="100" Content="Save" Click="Button_Click"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Compleated" Foreground="White" FontWeight="Bold" Margin="5"/>
                <DataGrid x:Name="CompleatedDatagrid" IsReadOnly="True" Height="130" Margin="5" SelectionChanged="CompleatedDatagrid_SelectionChanged" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
