<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFC77734">
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFE8E2DD" Margin="261,38,261,38" CornerRadius="20" Padding="20">
            <StackPanel>
                <Label Content="Loign" HorizontalAlignment="Center" FontWeight="Bold" FontSize="36" Foreground="#FFC77734"/>

                <TextBlock Text="Username : " Margin="10" Foreground="#FF351801"/>
                <TextBox x:Name="txtName" Margin="10,0" Background="#FFC7C7C7"/>

                <TextBlock Text="Password : " Margin="10,30,10,10" Foreground="#FF351801"/>
                <PasswordBox x:Name="txtPass" Margin="10,0" Background="#FFC7C7C7"/>

                <Label Name="eroroo" Content="" Margin="5,10,5,5" Foreground="#FF6F0000"/>

                <Button IsDefault="True" Margin="20,20,20,20" Content="Submit" Height="27" Background="#FFC77734" Width="196" Foreground="#FFE8E2DD" FontWeight="Bold" Click="Button_Click" />
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
